<table class='sticky-header'>
  <thead>
    <tr>
      <th class="col">Fecha</th>
      <th class="col">Estado</th>
      <th class="col">Destinatario</th>
    </tr>
  </thead>
    <% @results.each do |result| %>
      <% if result["recipient"] != 'http://www.giypablo.com/email_event' %>
        <% if result["event"] != 'accepted' %>

          <tr>
            <td>
              <%= Time.at(result["timestamp"]).strftime("%d/%m/%Y %-H:%M %p") %>
            </td>
            <td>
              <% if result["event"] == 'opened' %>
                Le√≠da
              <% elsif  result["event"] == 'failed'%>
                No enviada
              <% elsif  result["event"] == 'delivered'%>
                Enviada
              <% else %>
                <%= result["event"] %>
              <% end %>
            </td>
            <td>
              <%= result["recipient"] %>
            </td>
            
          </tr>
          
        <% end %>
      <% end %>
    <% end %>
</table>